<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="SlideMenuBinding">

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

    </data>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:onClick="@{clickListener}"
        android:soundEffectsEnabled="false"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="70dp"
            android:background="@mipmap/logo"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="15800000000"
            android:textColor="@color/text_common"
            android:textSize="@dimen/text_size_xxl" />


        <TextView
            android:id="@+id/tv_person_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/person_info"
            android:onClick="@{clickListener}"
            android:textColor="@color/tip_color"
            android:textSize="@dimen/text_size_xxl" />


        <TextView
            android:id="@+id/tv_user_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/user_feedback"
            android:onClick="@{clickListener}"
            android:layout_marginTop="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/tip_color"
            android:textSize="@dimen/text_size_xxl" />

        <View
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"></View>
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/tv_logout"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="@{clickListener}"
            android:layout_height="wrap_content"
            android:text="@string/exit_login"
            android:layout_marginBottom="40dp"
            android:textColor="@color/text_common"
            android:textSize="@dimen/text_size_xxl" />

    </LinearLayout>

</layout>