<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="FollowUpFragmentBinding">

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="vertical">


                <include
                    android:id="@+id/ll_show_name"
                    layout="@layout/view_item_select" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/common_background"></View>

                <include
                    android:id="@+id/ll_show_type"
                    layout="@layout/view_item_select" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/common_background"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include
                        android:id="@+id/ll_show_phone_number"
                        layout="@layout/view_item_select" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="afdfs" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"

                    android:layout_marginRight="15dp"
                    android:background="@color/common_background"></View>

                <include
                    android:id="@+id/ll_show_specify_type"
                    layout="@layout/view_item_select" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/common_background"></View>

                <include
                    android:id="@+id/ll_show_specify_item"
                    layout="@layout/view_item_select" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/common_background"></View>

                <include
                    android:id="@+id/ll_show_table_count"
                    layout="@layout/view_item_select" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/common_background"></View>

                <include
                    android:id="@+id/ll_show_budget"
                    layout="@layout/view_item_select" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/common_background"></View>

                <include
                    android:id="@+id/ll_show_time"
                    layout="@layout/view_item_select" />

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="20dp"></View>-->

                <!--<include-->
                <!--android:id="@+id/ll_edit_follower"-->
                <!--layout="@layout/view_item_edit" />-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"

                    android:layout_marginRight="15dp"
                    android:background="@color/common_background"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:background="@color/white"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="13dp">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/note"
                        android:textColor="@color/tip_color"
                        android:textSize="@dimen/text_size_m" />

                    <TextView
                        android:id="@+id/tv_show_note"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="top|left"
                        android:maxLength="500"
                        android:textColor="@color/gray_2"
                        android:textColorHint="@color/gray_1"
                        android:textSize="@dimen/text_size_m" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_background"></View>

                <LinearLayout
                    android:id="@+id/ll_review_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@color/common_background"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@string/review_progress"
                            android:textSize="@dimen/text_size_ss" />

                        <TextView
                            android:id="@+id/tv_modify_and_submit"
                            android:layout_width="wrap_content"
                            android:text="@string/modify_and_resubmit"
                            android:gravity="center_vertical"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:layout_marginRight="5dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:textSize="@dimen/text_size_ss"
                            android:background="@drawable/buttom_common_background"
                            android:layout_height="25dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_message"
                        android:paddingLeft="15dp"
                        android:background="@color/white"
                        android:textSize="@dimen/text_size_m"
                        android:textColor="@color/gray_2"
                        android:paddingTop="15dp"
                        android:text="@string/to_review_message"
                        android:paddingBottom="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_to_follow"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/common_background"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="@string/info_follow"
                        android:textSize="@dimen/text_size_ss" />

                    <include
                        android:id="@+id/ll_action_type"
                        layout="@layout/view_item_select" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/common_background"></View>

                    <include
                        android:id="@+id/ll_follow_up_time"
                        layout="@layout/view_item_select" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/common_background"></View>

                    <LinearLayout
                        android:id="@+id/ll_follow_up_note"
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:background="@color/white"
                        android:gravity="top"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="13dp">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="@string/note"
                            android:textColor="@color/tip_color"
                            android:textSize="@dimen/text_size_m" />

                        <EditText
                            android:id="@+id/et_edit_note"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="top|left"
                            android:hint="@string/please_write_note"
                            android:maxLength="500"
                            android:textColor="@color/gray_2"
                            android:textColorHint="@color/gray_1"
                            android:textSize="@dimen/text_size_m" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/common_background"></View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/common_background"></View>

                    <TextView
                        android:id="@+id/tv_follow_up_submit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginRight="45dp"
                        android:background="@drawable/buttom_common_background"
                        android:gravity="center"
                        android:onClick="@{clickListener}"
                        android:text="@string/confirm"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_xl"></TextView>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</layout>